{{>header}}

<div class="page-content">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Add Service Provider</h6>
                      <form method="POST">
                        <h4 class="card-title mt-5">Personal info</h4>
                        <div class="row">
                            {{!-- <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="providerId">Provider ID</label>
