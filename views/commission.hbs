{{>header}}

<div class="page-content">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Set commission</h6>
                    <form class="forms-sample" method="POST">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="commission">Enter commission</label>
                                    <input type="number" class="form-control" id="commission" name="commission"
                                        autocomplete="off" placeholder="Enter commission" required>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="save">Save or update commission</label> <br>
                                    <button type="submit" id="saveCommission" class="btn btn-primary mr-2">Save</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-3 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <button style="height: 100px;" type="button" class="btn btn-warning btn-icon-text">
                        <i class="btn-icon-prepend" data-feather="percent"></i>
                     Current commission: <h1>{{commission}} %</h1> 
                    </button>
                    {{!-- <h1 id="commission">{{commission.commission}}</h1> --}}
                </div>
            </div>
        </div>
    </div>

</div>
{{>footer}}

</div>


