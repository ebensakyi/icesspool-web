{{>header}}

<div class="page-content">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Make Request</h6>
                    <form class="forms-sample" method="POST">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="fullname">Full Name / Company</label>
                                    <input type="text" class="form-control" id="fullname" name="fullname"
                                        autocomplete="off" placeholder="Enter full name" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="phone">Phone Number</label>
                                    <input type="text" class="form-control" id="phone" name="phone"
                                        autocomplete="off" placeholder="Enter phone number" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="email">Community</label>
                                    <input type="text" class="form-control" id="community" name="community"
                                        placeholder="Community">
                                </div>
                            </div>
                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label for="toiletType">Select toilet type</label>
                                     <select class="form-control" id="tipoffPoint" name="tipoffPoint" required>
                                        <option>Select type of toilet</option>
                                        {{#each tipOffs}}
                                        <option value="{{this.id}}">{{this.siteName}} <br>{{this.location}}
                                            <br>{{this.address}}
                                        </option>
                                        {{/each}}

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                              <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="lng">Enter longitude:</label>
                                    <input type="text" class="form-control" id="lng" name="lng"
                                        autocomplete="off" placeholder="Enter lng " required>
                                </div>
                            </div>
                              <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="lat">Enter latitude:</label>
                                    <input type="text" class="form-control" id="lat" name="lat"
                                        autocomplete="off" placeholder="Enter lat" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="tipoffPoint">Select truck</label>
                                    <select class="form-control" id="tipoffPoint" name="tipoffPoint" required>
                                        <option>Select tip off point</option>
                                        {{#each tipOffs}}
                                        <option value="{{this.id}}">{{this.siteName}} <br>{{this.location}}
                                            <br>{{this.address}}
                                        </option>
                                        {{/each}}

                                    </select>

                                </div>
                            </div>
                          
                          
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Scanner List</h6>

                    <div class="table-responsive">
                        <table id="dataTableExample" class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Tip Off Point</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Location</th>
                                    {{!-- <th>Is Active</th> --}}

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>

                                    <td>{{this.id}}</td>
                                    <td>{{this.User.surname}} {{this.User.otherNames}}</td>
                                    <td>{{this.TipoffPoint.siteName}}</td>
                                    <td>{{this.User.phoneNumber}}</td>

                                    <td>{{this.TipoffPoint.address}}</td>
                                    <td>{{this.TipoffPoint.location}}</td>
                                    {{!-- <td>{{this.activated}}</td> --}}
                                    <td>
                                        <a href="/scanners/del/{{this.id}}" style="color: red;"
                                            class="btn btn- btn-icon" data-toggle="tooltip" data-placement="top"
                                            title="Delete account">
                                            <i data-feather="delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}

</div>


