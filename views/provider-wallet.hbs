{{>header}}

<div class="page-content">

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">balance</h6>

                    <div class="table-responsive">
                        <table id="dataTableExample" class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Provider</th>
                                    <th>Company</th>
                                    <th>Phone number</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>

                                    <td>{{this.id}}</td>

                                    <td>{{this.User.surname}} {{this.User.otherNames}}</td>
                                    <td>{{this.company}}</td>
                                    <td>{{this.User.phoneNumber}}</td>
                                    <td><span class="badge badge-pill badge-danger">GHS
                                            {{this.ProviderBalance.balance}}</span>
                                    </td>


                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{{>footer}}

