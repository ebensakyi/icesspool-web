{{>header}}

<div class="page-content">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Add User</h6>
                    <form class="forms-sample" method="POST">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="surname">Surname</label>
                                    <input type="text" class="form-control" id="surname" name="surname"
                                        autocomplete="off" placeholder="Enter surname" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="otherNames">Other names</label>
                                    <input type="text" class="form-control" id="otherNames" name="otherNames"
                                        autocomplete="off" placeholder="Enter other name(s)" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Email">
                                </div>
                            </div>
                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label for="phoneNumber">Phone number</label>
                                    <input type="phone" class="form-control" id="phoneNumber" name="phoneNumber"
                                        placeholder="Phone number" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="tipoffPoint">Tip off points</label>
                                    <select class="form-control" id="tipoffPoint" name="tipoffPoint" required>
                                        <option>Select tip off point</option>
                                        {{#each tipOffs}}
                                        <option value="{{this.id}}">{{this.siteName}} <br>{{this.location}}
                                            <br>{{this.address}}
                                        </option>
                                        {{/each}}

                                    </select>

                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="username">User name</label>
                                    <input type="text" class="form-control" id="username" name="username"
                                        autocomplete="off" placeholder="Enter username without spaces" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="password">Enter password</label>
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Password(At least 4 characters)" required>
                                </div>
                            </div>
                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label for="repeatPassword">Repeat password</label>
                                    <input type="password" class="form-control" id="repeatPassword"
                                        name="repeatPassword" placeholder="Repeat password here" required>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Scanner List</h6>

                    <div class="table-responsive">
                        <table id="dataTableExample" class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Tip Off Point</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Location</th>
                                    {{!-- <th>Is Active</th> --}}

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>

                                    <td>{{this.id}}</td>
                                    <td>{{this.User.surname}} {{this.User.otherNames}}</td>
                                    <td>{{this.TipoffPoint.siteName}}</td>
                                    <td>{{this.User.phoneNumber}}</td>

                                    <td>{{this.TipoffPoint.address}}</td>
                                    <td>{{this.TipoffPoint.location}}</td>
                                    {{!-- <td>{{this.activated}}</td> --}}
                                    <td>
                                        <a href="/scanners/del/{{this.id}}" style="color: red;"
                                            class="btn btn- btn-icon" data-toggle="tooltip" data-placement="top"
                                            title="Delete account">
                                            <i data-feather="delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}

</div>


