{{>header}}

<div class="page-content">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Add Tip Off Point</h6>
                    <form class="forms-sample" method="POST">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="siteName">Site name</label>
                                    <input type="text" class="form-control" id="siteName" name="siteName"
                                        autocomplete="off" placeholder="Enter sitename" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="otherNames">Place Id</label>
                                    <input type="text" class="form-control" id="placeId" name="placeId"
                                        autocomplete="off" placeholder="Enter place Id (Optional)">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input type="address" class="form-control" id="address" name="address"
                                        placeholder="Address">
                                </div>
                            </div>
                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label for="location">Location</label>
                                    <input type="phone" class="form-control" id="location" name="location"
                                        placeholder="Location" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="latitude">Latitude</label>
                                    <input type="number" class="form-control" id="latitude" name="latitude"
                                        autocomplete="off" placeholder="Enter latitude here" required>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="longitude">Longitude</label>
                                    <input type="number" class="form-control" id="longitude" name="longitude"
                                        placeholder="Enter longitude here" required>
                                </div>
                            </div>

                        </div>
                        <button type="button" onclick="saveTipoffPoint()" class="btn btn-primary mr-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">TIPOFF POINTS</h6>

                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th hidden>Id</th>
                                    <th>Name</th>
                                    <th>Location</th>
                                    <th>Address</th>

                                    <th>Status</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}

</div>


